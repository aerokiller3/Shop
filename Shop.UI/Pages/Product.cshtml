@page "{name}"
@model Shop.UI.Pages.ProductModel
@{
}

<link href="~/css/accordion-style.css" rel="stylesheet" />

<div class="hero">
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <div class="column is-6">
                    <figure class="image">
                        <img src="/products/images/@Model.Product.Image"/>
                    </figure>
                </div>
                <div class="column is-6">
                    <section class="content">
                        @*<p class="subtitle">@Model.Product.Description</p>
                            <p>Категории</p>
                        @foreach (var category in Model.Product.Categories)
                        {
                            <p class="content">
                                @category.Category.Title
                            </p>
                        }*@
                        <header>
                            <p class="title">@Model.Product.Name</p>
                        </header>
                        <main>
                            <p class="has-text-weight-bold">Цена: @Model.Product.Value</p>
                        </main>
                        <footer>
                            <form method="post">
                                <div class="field is-horizontal">
                                    <div class="field-label is-normal">
                                        <label class="label">Размер</label>
                                    </div>
                                    <div class="field-body">
                                        <div class="field is-narrow">
                                            <div class="control">
                                                <div class="select is-fullwidth">
                                                    <select asp-for="CartViewModel.StockId" onchange="toggleStock(event)">
                                                        <option disabled="disabled" selected="selected">Выберите размер</option>
                                                        @foreach (var stock in Model.Product.Stock)
                                                        {
                                                            bool disabled = stock.Qty <= 0;

                                                            <option id="qtyProduct-@stock.Qty" value="@stock.Id" disabled="@disabled">@stock.Description</option>
                                                        }

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="field is-horizontal">
                                    <div class="field-label is-normal">
                                        <label class="label">Количество</label>
                                    </div>
                                    <div class="field-body">
                                        <div class="field is-narrow">
                                            <div class="control">
                                                <input class="input" asp-for="CartViewModel.Qty" value="1" min="1" id="inputQty" />
                                            </div>

                                            @foreach (var stock in Model.Product.Stock)
                                            {
                                                if (stock.Qty <= 100)
                                                {
                                                    <p class="help is-danger is-hidden low-stock" id="low-stock-@stock.Id">
                                                        @(stock.Qty == 0 ? "Нет на складе" : $"{stock.Qty} осталось")
                                                    </p>
                                                }
                                            }
                                            @ViewData["EnoughQty"]
                                        </div>
                                    </div>
                                </div>
                                <div class="field is-horizontal">
                                    <div class="field-label is-normal">
                                    </div>
                                    <div class="field-body">
                                        <div class="field is-narrow">
                                            <div class="control">
                                                <button class="button is-success" type="submit">Добавить в корзину</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </footer>

                        <div class="accordion1">

                            <div>
                                <input type="radio" name="accordion" id="section-description" class="accordion1__input" />
                                <label for="section-description" class="accordion1__label">Описание товара</label>
                                <div class="accordion1__content">
                                    <p>
                                        @Model.Product.Description
                                    </p>
                                </div>
                            </div>

                            <div>
                                <input type="radio" name="accordion" id="section-structure" class="accordion1__input" />
                                <label for="section-structure" class="accordion1__label">Состав товара</label>
                                <div class="accordion1__content">
                                    <p>
                                        @Model.Product.Description
                                    </p>
                                </div>
                            </div>

                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var toggleStock = function (e) {
        console.log(e.target.value.qty);
        console.log(e.target.value);

        var stockToHide = document.querySelectorAll('.low-stock');
        var inputForQty = document.getElementById('inputQty');

        //console.log(stockToHide);
        //console.log(inputForQty);

        inputForQty.max = 13;

        stockToHide.forEach(function (e) {
            e.classList.add('is-hidden');
        });

        showLowStock(e.target.value);
    };

    var showLowStock = function (id) {
        var stockToShow = document.getElementById('low-stock-' + id);

        if (stockToShow !== null && stockToShow !== undefined)
            stockToShow.classList.remove('is-hidden');
    };

    showLowStock(document.getElementById('CartViewModel_StockId').value);

    @*function qtyProducts(input) {
        var stockId = document.getElementById('qtyProduct-' + id);

        input.max = @Model.Product.Stock.FirstOrDefault(x => x.Id == 3).Qty;

        console.log(stockId);
    }*@

    function isQty(obj) {
        if (obj.value > 5) obj.value = obj.max;
        else obj.max = 3;
    }
</script>