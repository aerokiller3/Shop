@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
    <div v-if="form === null">
        <button class="button" @@click="newProduct()">Добавить</button>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Категории</th>
                <th></th>
                <th></th>
            </tr>
            <tr v-for="(product, index) in products">
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{product.value}}</td>
                <td v-for="category in product.categories" aria-multiline="true">{{category.category.title}}</td>
                <td><a @@click="editProduct(product.id, index)">Редактировать</a></td>
                <td><a @@click="deleteProduct(product.id, index)">Удалить</a></td>
            </tr>
        </table>
    </div>

    <div v-else>
        <div class="mb-5">
            <button class="button is-success" @@click="createProduct" v-if="!form.id">Создать</button>
            <button class="button is-warning" @@click="updateProduct" v-else>Сохранить</button>
            <button class="button" @@click="resetForm">Cancel</button>
        </div>
        <div class="field">
            <label class="label">Название</label>
            <div class="control">
                <input class="input" type="text" v-model="form.name"/>
            </div>
        </div>

        <div class="field">
            <label class="label">Описание</label>
            <div class="control">
                <input class="input" type="text" v-model="form.description"/>
            </div>
        </div>

        <div class="field">
            <label class="label">Цена</label>
            <div class="control">
                <input class="input" type="number" v-model.number="form.value"/>
            </div>
        </div>
        
        
        @*TODO: Уточнить у Димы про товары без категорий, могут ли такие быть*@

        <div class="field">
            <label class="label">Категории</label>
            <div class="select is-multiple">
                <select v-model="form.categories" multiple size="10">
                    @foreach (var c in Model.Categories.Where(x => x.ParentCategoryId != null))
                    {
                        <option value="@c.Id">@c.Title</option>
                    }
                </select>
            </div>
        </div>

        <div v-if="form.images">
            <div class="field">
                <button class="button is-danger" @@click="form.images = null">Загрузить новые</button>
            </div>
            <div class="columns" v-for="image in form.images">
                <div class="column is-2 flex justify-center align-center is-size-1">
                    {{ image.index + 1 }}
                </div>
                <div class="column">
                    <img width="150" height="150" :src="image.path"/>
                </div>
            </div>
        </div>
        <div v-else>
            <div class="field">
                <div class="control">
                    <input ref="file" class="is-hidden" type="file" accept="image/*" @@change="addImage">
                    <button class="button" @@click="$refs.file.click()">Добавить картинку</button>
                </div>
            </div>
            <div class="columns" v-for="(img, index) in fileImages">
                <div class="column is-2 flex justify-center align-center is-size-1">
                    {{index + 1}}
                </div>
                <div class="column">
                    <img width="150" height="150" :src="img"/>
                </div>
                <div class="column flex-column justify-center align-center">
                    <button class="button" @@click="moveImageUp(index)" v-if="index > 0">Выше</button>
                    <button class="button" @@click="moveImageDown(index)" v-if="index < fileImages.length - 1">Ниже</button>
                </div>
                <div class="column flex justify-center align-center">
                    <button class="button is-danger" @@click="images.splice(index, 1)">Удалить</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/admin/products.js" type="text/javascript"></script>
}
