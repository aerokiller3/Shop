@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
    <div v-if="!editing">
        <button class="button" @@click="newProduct">Add New Product</button>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Value</th>
                <th>Image</th>
                <th>Categories</th>
                <th></th>
                <th></th>
            </tr>
            <tr v-for="(product, index) in products">
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{product.value}}</td>
                <td>{{product.image}}</td>
                <td v-for="category in product.categories" aria-multiline="true">{{category.category.title}}</td>
                <td><a @@click="editProduct (product.id, index)">Edit</a></td>
                <td><a @@click="deleteProduct(product.id, index)">Remove</a></td>
            </tr>
        </table>
    </div>

    <div v-else>
        <div class="field">
            <label class="label">Product Name</label>
            <div class="control">
                <input class="input" v-model="productModel.name" />
            </div>
        </div>

        <div class="field">
            <label class="label">Product Description</label>
            <div class="control">
                <input class="input" v-model="productModel.description" />
            </div>
        </div>

        <div class="field">
            <label class="label">Value</label>
            <div class="control">
                <input class="input" v-model.number="productModel.value" />
            </div>
        </div>

        <div class="field">
            <label class="label">Категории</label>
            <div class="control">
                <select v-model="productModel.categories" multiple>
                    @foreach (var c in Model.Categories.Where(x => x.ParentCategoryId != null))
                    {
                        <option value="@c.Id">@c.Title</option>
                    }
                </select>
            </div>
        </div>

        <!--<div class="field"--> @*v-for="image in form.images"*@<!-->
            <label class="label">Image</label>
            <div class="control">
                <input type="file" class="input" value="productModel.image" @@change="uploadImage" />-->
                @*<div>
                        <img width="150" height="150" :src="image.path"/>
                    </div>*@
            <!--</div>
        </div>-->
        
        <div v-if="form.images">
            <div class="field">
                <button class="button is-danger" @@click="form.images = null">Reset Images</button>
            </div>
            <div class="columns" v-for="image in form.images">
                <div class="column is-2 flex justify-center align-center is-size-1">
                    {{ image.index + 1 }}
                </div>
                <div class="column">
                    <img width="150" height="150" :src="image.path"/>
                </div>
            </div>
        </div>
        <div v-else>
            <div class="field">
                <div class="control">
                    <input ref="file" class="is-hidden" type="file" accept="image/*" @@change="addImage">
                    <button class="button" @@click="$refs.file.click()">Add Image</button>
                </div>
            </div>
            <div class="columns" v-for="(img, index) in fileImages">
                <div class="column is-2 flex justify-center align-center is-size-1">
                    {{index + 1}}
                </div>
                <div class="column">
                    <img width="150" height="150" :src="img"/>
                </div>
                <div class="column flex-column justify-center align-center">
                    <button class="button" @@click="moveImageUp(index)" v-if="index > 0">Up</button>
                    <button class="button" @@click="moveImageDown(index)" v-if="index < fileImages.length - 1">Down</button>
                </div>
                <div class="column flex justify-center align-center">
                    <button class="button is-danger" @@click="form.images.splice(index, 1)">Remove</button>
                </div>
            </div>
        </div>

        <br />

        <button class="button is-success" @@click="createProduct" v-if="!form.id">Create Product</button>
        <button class="button is-warning" @@click="updateProduct" v-else>Update Product</button>
        <button class="button" @@click="cancel">Cancel</button>
    </div>
</div>

@section scripts{
    <script src="~/js/admin/products.js" type="text/javascript"></script>
}
