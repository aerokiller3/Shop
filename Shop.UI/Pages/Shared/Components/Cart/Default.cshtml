@model IEnumerable<Shop.Application.Cart.GetCart.Response>

@{

}


<div>
    <p class="title">Корзина</p>
    @foreach (var product in Model)
    {
        <article class="media">
            <figure class="media-left">
                <p class="image is-128x128">
                    @if (string.IsNullOrEmpty(product.Image))
                    {
                        <img src="~/images/no_image.png" />
                    }
                    else
                    {
                        <img src="@product.Image" />
                    }
                </p>
            </figure>
            <div class="media-content">
                <div class="content">
                    <p class="title">@product.Name</p>
                    <div class="level">
                        <div class="level-item">

                        </div>
                    </div>
                    <p class="subtitle">Количество: @product.Qty</p>
                    <p class="subtitle">Размер: @product.StockName</p>
                    <p class="subtitle">Цена: @product.Value</p>
                </div>
                @*<nav class="level is-mobile">
                    <div class="level-left">
                        <a class="level-item">
                            <span class="icon is-small"><i class="fas fa-reply"></i></span>
                        </a>
                        <a class="level-item">
                            <span class="icon is-small"><i class="fas fa-retweet"></i></span>
                        </a>
                        <a class="level-item">
                            <span class="icon is-small"><i class="fas fa-heart"></i></span>
                        </a>
                    </div>
                </nav>*@
            </div>
        </article>
    }
    @{
        decimal sum = 0;
        foreach (var product in Model)
        {
            sum += product.RealValue * product.Qty;
        }
        <br/>
        <p class="subtitle">Общая стоимость : @sum.ToString("N2") руб.</p>
    }
    </div>