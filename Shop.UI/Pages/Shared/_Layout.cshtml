<body>
    <header>
        <div class="header-main sticky-nav">
            <div class="container position-relative">
                <div class="row">
                    <div class="col-auto align-self-center">
                        <div>
                            <a href="/"><img src="~/images/лого.jpg" alt="YouRD.Shop"></a>
                        </div>
                    </div>
                    <div class="col align-self-center d-none d-lg-block">
                        <div class="main-menu">
                            <ul>
                                <li class="dropdown">
                                    <a href="/">Главная</a>
                                </li>
                                <li class="dropdown position-static">
                                    <a>Категории <i class="pe-7s-angle-down"></i></a>
                                    <ul class="mega-menu d-block">
                                        <li class="d-flex">
                                            <vc:category view="Category"></vc:category>
                                        </li>
                                    </ul>
                                </li>
                                <li><a href="">О нас</a></li>
                                <li><a href="">Гарантии</a></li>
                                <li><a href="">Доставка и оплата</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col col-lg-auto align-self-center pl-0">
                        <div class="header-actions">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.HasClaim("Role", "Manager") || User.HasClaim("Role", "Admin"))
                                {
                                    <a class="header-action-btn login-btn d-none d-lg-block" asp-page="/Admin/Index">
                                        Менеджер
                                    </a>
                                }
                                else
                                {
                                    <a class="header-action-btn login-btn d-none d-lg-block" asp-page="/Accounts/PersonalArea">
                                        Личный кабинет
                                    </a>
                                }
                                <vc:cart view="Small"></vc:cart>
                                <a class="header-action-btn login-btn d-none d-lb-block" asp-page="/Accounts/Logout">Выйти</a>
                            }
                            else
                            {
                                <vc:cart view="Small"></vc:cart>
                                <a class="header-action-btn login-btn" asp-page="/Accounts/Login">Войти</a>
                            }
                            <a href="#offcanvas-mobile-menu" class="header-action-btn offcanvas-toggle d-lg-none">
                                <i class="pe-7s-menu"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="offcanvas-mobile-menu" class="offcanvas offcanvas-mobile-menu">
        <button class="offcanvas-close"></button>
        <div class="inner">
            <div class="offcanvas-menu mb-4">
                <ul>
                    <li>
                        <a href="/">Главная</a>
                    </li>
                    <li>
                        <span class="menu-expand"></span>
                        <a>
                            <span class="menu-text">Категории</span>
                        </a>
                        <ul class="sub-menu">
                            <vc:category view="CategoryMobile"></vc:category>
                        </ul>
                    </li>
                    <li><a>О нас</a></li>
                    <li><a>Гарантии</a></li>
                    <li><a>Доставка о оплата</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.HasClaim("Role", "Manager") || User.HasClaim("Role", "Admin"))
                        {
                            <li><a asp-page="/Admin/Index">Менеджер</a></li>
                        }
                        else
                        {
                            <li><a asp-page="/Accounts/PersonalArea">Личный кабинет</a></li>
                        }
                    }
                    else
                    {
                        <li><a asp-page="/Account/Login">Войти</a></li>
                    }
                </ul>
            </div>
            <div class="offcanvas-social mt-auto">
                <ul>
                    <li>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="offcanvas-cart" class="offcanvas offcanvas-cart">
        <div class="inner">
            <div class="head">
                <span class="title">Корзина</span>
                <button class="offcanvas-close">×</button>
            </div>
            <div class="body customScroll">
                <ul class="minicart-product-list">
                    <vc:cart view="MobileCart"></vc:cart>
                </ul>
            </div>
            <div class="foot">
                <div class="buttons mt-30px">
                    <a asp-page="/Cart" class="btn btn-dark btn-hover-primary mb-30px">Перейти в корзину</a>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/Checkout/CustomerInformation" class="btn btn-outline-dark current-btn">Оплатить</a>
                    }
                </div>
            </div>
        </div>
    </div>

